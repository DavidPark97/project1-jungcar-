<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="중카"
                android:textSize="30dp"
                android:src="@drawable/main"
                android:textAlignment="center"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"></ImageView>
            <ImageView

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"></ImageView>
            <ImageView
                android:id="@+id/imgMy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/mypage"
                android:layout_weight="1"></ImageView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">
        <TextView
            android:id="@+id/tvBuy"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#71c7ec"
            android:text="차량구매"
            android:textSize="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"></TextView>

        <TextView
            android:id="@+id/tvSell"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#71c7ec"
            android:text="차량판매"
            android:textSize="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"></TextView>


        <TextView
            android:id="@+id/tvPart"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#71c7ec"
            android:text="부품거래"
            android:textSize="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"></TextView>


        <TextView
            android:id="@+id/tvRecord"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#71c7ec"
            android:text="차량기록부"
            android:textSize="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"></TextView>


        <TextView
            android:id="@+id/tvCommunity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#71c7ec"
            android:text="커뮤니티"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"></TextView>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05">

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"></TextView>
        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"></TextView>


        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/llType"
        android:layout_weight="0.1">
        <Spinner
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:id="@+id/spinBrdType"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"></Spinner>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"></TextView>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="글쓰기"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/btnWrite"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">
        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#aaa"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-5dp"
        android:layout_weight="0.1">
        <TextView
            android:layout_width="0dp"
            android:text="최신글"
            android:id="@+id/tvRecent"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#0000ff"
            android:textStyle="bold"
            android:background="#fff"
            android:layout_height="match_parent"
            android:layout_weight="1"></TextView>
        <TextView
            android:layout_width="0dp"
            android:text="공지"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#666"
            android:id="@+id/tvNotice"
            android:textStyle="bold"
            android:background="@drawable/grayedge"
            android:layout_height="match_parent"
            android:layout_weight="1"></TextView>
        <TextView
            android:layout_width="0dp"
            android:text="베스트"
            android:id="@+id/tvBest"
            android:textSize="15dp"
            android:textColor="#666"

            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/grayedge"
            android:layout_height="match_parent"
            android:layout_weight="1"></TextView>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/boardList"
        android:layout_weight="0.6"></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="0.1">
        <TextView
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="0.2"></TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:text="1"
            android:id="@+id/btnFir"
            android:textSize="15dp"
            android:gravity="center"

            android:textColor="#fff"
            android:background="#0088ee"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"></androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:text="2"
            android:id="@+id/btnSec"

            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#000"
            android:background="@drawable/tablesquare"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"></androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:text="3"
            android:id="@+id/btnThi"

            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#000"
            android:background="@drawable/tablesquare"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"></androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:text="4"
            android:id="@+id/btnFour"

            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#000"
            android:background="@drawable/tablesquare"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"></androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:text="5"
            android:id="@+id/btnFifth"

            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#000"
            android:background="@drawable/tablesquare"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"></androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:text=">"
            android:id="@+id/btnNext"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#000"
            android:background="@drawable/tablesquare"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"></androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingBottom="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="0.1">

        <Spinner
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:id="@+id/spinCond"
            android:layout_height="match_parent"
            android:layout_weight="0.25"></Spinner>
        <EditText
            android:paddingLeft="5dp"
            android:layout_width="0dp"
            android:background="@drawable/square"
            android:id="@+id/edtQuery"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></EditText>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnFind"
            android:background="@drawable/find"
            android:layout_marginRight="10dp"
            android:layout_weight="0.1"></ImageButton>
    </LinearLayout>
</LinearLayout>