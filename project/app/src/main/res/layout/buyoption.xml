<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <LinearLayout
     android:layout_marginTop="100dp"
     android:layout_marginLeft="20dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
     <ImageButton
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="match_parent"
         android:src="@drawable/back"
         android:id="@+id/btnBack"></ImageButton>
     <EditText
         android:paddingLeft="10dp"
         android:layout_weight="8"
         android:layout_width="0dp"
         android:background="#eeeeee"
         android:hint="차량 검색하기"
         android:id="@+id/edtSearch"
         android:layout_height="40dp"></EditText>
     <androidx.appcompat.widget.AppCompatButton
         android:layout_width="0dp"
         android:layout_weight="1.5"
         android:text="검색"
         android:id="@+id/btnSearch"
         android:layout_height="match_parent"
         ></androidx.appcompat.widget.AppCompatButton>
 </LinearLayout>
    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:text="제조사"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_height="30dp"></TextView>

        <TextView
            android:layout_weight="5"
            android:layout_width="0dp"
            android:id="@+id/tvBrand"
            android:textColor="#000000"
            android:layout_height="30dp"></TextView>
        <ImageButton
            android:layout_weight="1"
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:background="#ffffffff"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:src="@drawable/cancle"
            android:id="@+id/rstBrand"></ImageButton>
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/direction"
            android:id="@+id/btnBrand"></ImageButton>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#cccccc"></View>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:text="모델"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_height="30dp"></TextView>

        <TextView
            android:layout_weight="5"
            android:layout_width="0dp"
            android:id="@+id/tvModel"
            android:textColor="#000000"
            android:layout_height="30dp"></TextView>
        <ImageButton
            android:layout_weight="1"
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:background="#ffffffff"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:src="@drawable/cancle"
            android:id="@+id/rstModel"></ImageButton>
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/direction"
            android:id="@+id/btnModel"></ImageButton>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#cccccc"></View>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:text="등급"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_height="30dp"></TextView>

        <TextView
            android:layout_weight="5"
            android:layout_width="0dp"
            android:id="@+id/tvGrade"
            android:textColor="#000000"
            android:layout_height="30dp"></TextView>
        <ImageButton
            android:layout_weight="1"
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:background="#ffffffff"
            android:layout_marginRight="10dp"
            android:src="@drawable/cancle"
            android:paddingBottom="5dp"
            android:id="@+id/rstGrade"></ImageButton>
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/direction"
            android:id="@+id/btnGrade"></ImageButton>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#cccccc"></View>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:text="주행거리"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_height="30dp"></TextView>

        <TextView
            android:layout_weight="5"
            android:layout_width="0dp"
            android:id="@+id/tvMilesage"
            android:textColor="#000000"
            android:layout_height="30dp"></TextView>
        <ImageButton
            android:layout_weight="1"
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:background="#ffffffff"
            android:layout_marginRight="10dp"
            android:src="@drawable/cancle"
            android:paddingBottom="5dp"
            android:id="@+id/rstMilesage"></ImageButton>
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/direction"
            android:id="@+id/btnMilesage"></ImageButton>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#cccccc"></View>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:text="가격"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_height="30dp"></TextView>

        <TextView
            android:layout_weight="5"
            android:layout_width="0dp"
            android:id="@+id/tvPrice"
            android:textColor="#000000"
            android:layout_height="30dp"></TextView>
        <ImageButton
            android:layout_weight="1"
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:background="#ffffffff"
            android:layout_marginRight="10dp"
            android:src="@drawable/cancle"
            android:paddingBottom="5dp"
            android:id="@+id/rstPrice"></ImageButton>
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/direction"
            android:id="@+id/btnPrice"></ImageButton>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#cccccc"></View>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:text="지역"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_height="30dp"></TextView>

        <TextView
            android:layout_weight="5"
            android:layout_width="0dp"
            android:id="@+id/tvCountry"
            android:textColor="#000000"
            android:layout_height="30dp"></TextView>
        <ImageButton

            android:layout_weight="1"
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:background="#ffffffff"
            android:paddingBottom="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/cancle"
            android:id="@+id/rstCountry"></ImageButton>
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="#ffffffff"
            android:src="@drawable/direction"
            android:id="@+id/btnCountry"></ImageButton>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#cccccc"></View>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:text="1인 차량 여부"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_height="30dp"></TextView>

        <TextView
            android:layout_weight="7"
            android:layout_width="0dp"
            android:textColor="#000000"
            android:layout_height="30dp"></TextView>
        <CheckBox
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/chkOwn"></CheckBox>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#cccccc"></View>

    <LinearLayout
        android:layout_marginTop="50dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/edge"
            android:textColor="@color/black"
            android:text="초기화"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/btnReset"></androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/nostroke"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="매물보기"
            android:id="@+id/btnShList"></androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

</LinearLayout>