<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/back"
                android:id="@+id/btnBack"></ImageButton>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/main"
                android:textSize="30dp"
                android:textAlignment="center"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"></ImageView>
            <ImageView

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"></ImageView>
            <ImageView
                android:id="@+id/imgMy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/mypage"
                android:layout_weight="1"></ImageView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">
        <TextView
            android:id="@+id/tvBill"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#71c7ec"
            android:text="차계부"
            android:textStyle="bold"
            android:textSize="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"></TextView>

        <TextView
            android:id="@+id/tvStatics"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#71c7ec"
            android:text="통계"
            android:textStyle="bold"
            android:textSize="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"></TextView>


        <TextView
            android:id="@+id/tvSerSch"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#71c7ec"
            android:text="점검일정"
            android:textStyle="bold"
            android:textSize="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"></TextView>




    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/nostroke"
        android:layout_weight="1.5">
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_gravity="center"
                    android:id="@+id/imgLogo"
                    android:layout_weight="1">

                </ImageView>
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/imgCar"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:background="@drawable/edge"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <LinearLayout
                    android:layout_width="match_parent"

                    android:background="@color/white"
                    android:layout_margin="13dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textColor="#000"
                        android:layout_weight="0.8"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="내 차 번호를 입력해주세요." />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/edtPlnumber"
                        android:background="@drawable/pledge"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:hint="999구9999"></EditText>
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30dp"
                            android:layout_height="10dp"
                            android:src="@drawable/circle"></ImageView>
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="30dp"
                            android:layout_height="10dp"
                            android:src="@drawable/circle"></ImageView>
                    </FrameLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/btnAdjust"
                        android:layout_margin="20dp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:background="@drawable/skyedge2"
                        android:text="확인"></androidx.appcompat.widget.AppCompatButton>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:visibility="invisible"
            android:id="@+id/btnCancel"

            android:layout_marginBottom="15dp"
            android:src="@drawable/delete"
            android:layout_width="20dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginRight="-60dp"
            android:layout_height="20dp">

        </ImageButton>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/navyedge"
        android:layout_weight="0.4">
                <TextView
                    android:layout_width="0dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="25dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="평균연비"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical"></TextView>
        <TextView
            android:layout_width="0dp"
            android:id="@+id/tvEffi"
            android:textSize="30dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"></TextView>
        <TextView
            android:layout_width="0dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="km"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/llDist"
            android:orientation="vertical"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/tablesquare">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="주행거리"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/tvDist"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="0 KM"
                android:textSize="13dp">

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/llOil"
            android:padding="3dp"
            android:orientation="vertical"
            android:background="@drawable/tablesquare">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="주유"
                android:gravity="center"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/tvOil"
                android:text="0 원"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="13dp">

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:id="@+id/llMaintain"
            android:orientation="vertical"
            android:background="@drawable/tablesquare">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="정비"
                android:gravity="center"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0 원"
                android:textColor="#000"

                android:id="@+id/tvMaintain"
                android:textAlignment="center"
                android:textSize="13dp">

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/llCrash"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="3dp"
            android:background="@drawable/tablesquare">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="사고기록"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000"
                android:textAlignment="center"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="0 건"
                android:textColor="#000"
                android:id="@+id/tvCrash"
                android:textSize="13dp">

            </TextView>


        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#cccccc"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.5">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/fix"></ImageView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/tvBook"
                android:textStyle="bold"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:text="정비예약"></TextView>
        </LinearLayout>
        <View
            android:layout_width="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#cccccc"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></TextView>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_weight="1"
                android:id="@+id/btnFind"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:text="정비소찾기"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="23dp"
                android:background="@drawable/redcircle"
                android:layout_gravity="center_vertical">

            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#cccccc"></View>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginBottom="70dp"
        android:layout_weight="0.5">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/book"></ImageView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:text="정비항목"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>
        <View
            android:layout_width="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#cccccc"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/tvSerChk"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="00건"></TextView>
        </LinearLayout>
        <View
            android:layout_width="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#cccccc"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSerChk"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="#fff"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                android:textSize="20dp"
                android:background="@drawable/skycircle"
                android:text="확인하기">

            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>